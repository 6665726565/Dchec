<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/user_posts_shape"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/association_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Affaire Scolaire"
        android:textColor="@color/nav_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/association_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Association Askil"
        android:textColor="@color/nav_black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/association_title_txt"
>

    </TextView>

    <TextView
        android:id="@+id/association_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/nav_black"
        android:layout_below="@id/association_name"
        android:gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:text="A la recherche d’un maximum d’affaires scolaires pour les distribuer sur les enfants qui en manquent pour cette rentrée ......... ">

    </TextView>

    <Button
        android:layout_width="77dp"
        android:layout_height="24dp"
        android:layout_below="@id/association_description"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/association_contact_button_shape"
        android:text="contacter"
        android:textSize="10dp">

    </Button>
</RelativeLayout>