<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_centerVertical="true"
    android:fillViewport="true"
    android:id="@+id/bottom_sheet_container"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:layout_constraintBottom_toBottomOf="parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@drawable/sheet_dialog_shape">




        <ImageView
            android:src="@drawable/ic_bottom_sheet"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cherchez-vous un objet spécifique ?"
            android:textAlignment="center"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/nav_black"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:background="@drawable/ic_bottom_sheet_line"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="20dp"
            android:text="Nature"
            android:textStyle="bold"
            android:textColor="@color/nav_black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="13dp"
            >



               <TextView
                   android:id="@+id/gratuit_txt"
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:text="Gratuit"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   android:background="@drawable/category_selected"
                   android:padding="8dp"

                   >

               </TextView>

                <TextView
                    android:id="@+id/payant_txt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Payant"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_unselected"
                    android:padding="8dp"
                    >

                </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="25dp"
            android:text="Categories"
            android:textStyle="bold"
            android:textColor="@color/nav_black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="13dp"
            >

                <TextView
                    android:id="@+id/categorie_all_txt"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Tout"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:background="@drawable/category_selected"
                    android:padding="8dp"

                    >

                </TextView>

                <TextView
                    android:id="@+id/nourriture_txt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Nourriture"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:background="@drawable/category_unselected"
                    android:padding="8dp"

                    >

                </TextView>

                <TextView
                    android:id="@+id/vetement_txt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Vêtement"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_unselected"
                    android:padding="8dp"
                    >

                </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            >

                <TextView
                    android:id="@+id/chaussure_txt"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Chaussure"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:background="@drawable/category_unselected"
                    android:padding="8dp"

                    >

                </TextView>

                <TextView
                    android:id="@+id/maison_txt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Maison"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/category_unselected"
                    android:padding="8dp"
                    >

                </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            >


        <TextView
            android:id="@+id/autre_txt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Autre"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:background="@drawable/category_unselected"
            android:padding="8dp"
            >

        </TextView>


        </LinearLayout>


        <Button
            android:id="@+id/btn_chercher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:background="@drawable/category_selected"
            android:text="chercher"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            >

        </Button>

</LinearLayout>

</ScrollView>