<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView


        android:layout_width="280dp"
        android:layout_height="250dp"
        android:background="@drawable/side_form"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




    </ImageView>



    <androidx.cardview.widget.CardView


        app:cardBackgroundColor="@color/white"
        android:elevation="3dp"
        android:layout_width="280dp"
        android:layout_height="500dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"


            >


        <androidx.cardview.widget.CardView
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:id="@+id/utilisateur_card_view"

            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_width="215dp"
            android:layout_height="141dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="vertical">

            <ImageView
                android:id="@+id/utilisateur_select"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/simple_user">

            </ImageView>

                <TextView
                    android:id="@+id/utilisateur_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Utilisateur"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    android:textColor="@color/main_color">



                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
            
            


            <androidx.cardview.widget.CardView
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:id="@+id/association_card_view"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="20dp"
               android:layout_width="215dp"
                android:layout_height="141dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/association_select"

                        android:layout_marginLeft="8dp"
                        android:layout_width="166dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/association_icon1">

                    </ImageView>

                    <TextView
                        android:id="@+id/association_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Association"
                        android:textStyle="bold"
                        android:textSize="16sp"

                        android:textColor="@color/main_color">


                        >

                    </TextView>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>